<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/header') %>
  <body class="flex min-h-screen flex-col bg-gray-900 text-white">
    <%- include('../partials/nav') %>

    <main
      class="mx-auto w-full max-w-[1366px] flex-grow px-4 py-8 sm:px-6 lg:px-8"
    >
      <!-- Header -->
      <div class="mb-8 flex flex-wrap items-center justify-between gap-4">
        <div>
          <h1 class="mb-2 text-3xl font-bold text-white">All Platforms</h1>
          <p class="text-gray-400">
            Browse games by platform (<%= platforms.length %>)
          </p>
        </div>
        <a
          href="/platforms/new"
          class="inline-flex items-center rounded-lg bg-green-600 px-6 py-3 font-bold text-white transition duration-300 hover:bg-green-700"
        >
          <i class="fas fa-plus mr-2"></i>
          Add Platform
        </a>
      </div>

      <!-- Platforms Grid -->
      <% if (platforms.length === 0) { %>
      <div class="py-16 text-center">
        <i class="fas fa-desktop mb-4 text-6xl text-gray-600"></i>
        <h2 class="mb-2 text-xl font-semibold text-gray-400">
          No platforms available
        </h2>
        <p class="mb-6 text-gray-500">
          Start organizing your games by adding platforms!
        </p>
        <a
          href="/platforms/new"
          class="inline-flex items-center rounded-lg bg-green-600 px-6 py-3 font-bold text-white transition duration-300 hover:bg-green-700"
        >
          <i class="fas fa-plus mr-2"></i> Add Your First Platform
        </a>
      </div>
      <% } else { %>
      <div
        class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4"
      >
        <% platforms.forEach(platform => { %>
        <a
          href="/platforms/<%= platform.platform_id %>"
          class="transform rounded-lg bg-gray-800 p-6 shadow-lg transition duration-300 hover:scale-105 hover:bg-gray-700 hover:shadow-xl"
        >
          <div class="flex items-center justify-between gap-2">
            <div>
              <h2 class="mb-1 text-lg font-semibold text-white">
                <%= platform.name %>
              </h2>
              <p class="text-sm text-gray-400">View games</p>
            </div>
            <i class="fas fa-desktop text-2xl text-green-500"></i>
          </div>
        </a>
        <% }) %>
      </div>
      <% } %>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>
